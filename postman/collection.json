// Trzyk≈Çadowa kolekcja Postman z testami API (https://local-gov-units.polandapi.com), 
// pozytywne + negatywne testy + walidacja SLA i walidacja schematu JSON.

  "info": {
    "_postman_id": "senior-qa-advanced-collection",
    "name": "Poland API - Senior Positive & Negative Tests",
    "description": "Data-driven API tests with SLA validation and JSON schema validation.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// SLA threshold (ms)",
          "const SLA_LIMIT = 1000;",
          "",
          "// Common SLA validation",
          "function validateSLA() {",
          "    pm.test('Response time is below SLA (' + SLA_LIMIT + 'ms)', function () {",
          "        pm.expect(pm.response.responseTime).to.be.below(SLA_LIMIT);",
          "    });",
          "}",
          "",
          "// Negative validation",
          "function validate404Response() {",
          "    const json = pm.response.json();",
          "    pm.test('success == false', function () {",
          "        pm.expect(json.success).to.eql(false);",
          "    });",
          "    pm.test('Response contains message field', function () {",
          "        pm.expect(json).to.have.property('message');",
          "    });",
          "}",
          "",
          "// Positive validation",
          "function validate200Response() {",
          "    const json = pm.response.json();",
          "",
          "    pm.test('success == true', function () {",
          "        pm.expect(json.success).to.eql(true);",
          "    });",
          "",
          "    const schema = {",
          "        type: 'object',",
          "        required: ['success', 'data'],",
          "        properties: {",
          "            success: { type: 'boolean' },",
          "            data: { type: 'object' }",
          "        }",
          "    };",
          "",
          "    pm.test('Response matches JSON schema', function () {",
          "        pm.response.to.have.jsonSchema(schema);",
          "    });",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "GET Municipality By Name",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/municipalities/name/{{city}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "municipalities", "name", "{{city}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "validateSLA();",
              "",
              "if (pm.iterationData.get('expectedStatus') === 404) {",
              "    pm.test('HTTP status 404', function () {",
              "        pm.response.to.have.status(404);",
              "    });",
              "    validate404Response();",
              "} else {",
              "    pm.test('HTTP status 200', function () {",
              "        pm.response.to.have.status(200);",
              "    });",
              "    validate200Response();",
              "}"
            ]
          }
        }
      ]
    }
  ]
}